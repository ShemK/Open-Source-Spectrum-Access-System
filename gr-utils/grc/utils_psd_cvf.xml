<?xml version="1.0"?>
<block>
  <name>PSD</name>
  <key>utils_psd_cvf</key>
  <category>Utils</category>
  <import>import utils</import>
  <make>utils.psd_cvf($samp_rate, $fft_len, $window_type, $alpha)</make>
  <callback>set_fft_len($fft_len)</callback>
  <callback>set_window_type($window_type)</callback>
  <callback>set_samp_rate($samp_rate)</callback>
  <callback>set_average($alpha)</callback>
  <param>
    <name>Samp rate</name>
    <key>samp_rate</key>
    <type>real</type>
  </param>
  <param>
    <name>FFT length</name>
    <key>fft_len</key>
    <value> 1024</value>
    <type>int</type>
  </param>
  <param>
    <name>Window</name>
    <key>window_type</key>
    <value>firdes.WIN_BLACKMAN_hARRIS</value>
    <type>enum</type>
    <option>
      <name>Blackman-harris</name>
      <key>firdes.WIN_BLACKMAN_hARRIS</key>
    </option>
    <option>
      <name>Hamming</name>
      <key>firdes.WIN_HAMMING</key>
    </option>
    <option>
      <name>Hann</name>
      <key>firdes.WIN_HANN</key>
    </option>
    <option>
      <name>Blackman</name>
      <key>firdes.WIN_BLACKMAN</key>
    </option>
    <option>
      <name>Rectangular</name>
      <key>firdes.WIN_RECTANGULAR</key>
    </option>
    <option>
      <name>Kaiser</name>
      <key>firdes.WIN_KAISER</key>
    </option>
    <option>
      <name>Flat-top</name>
      <key>firdes.WIN_FLATTOP</key>
    </option>
  </param>
  <param>
    <name>Average IIR alpha</name>
    <key>alpha</key>
    <value>0.8</value>
    <type>real</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>complex</type>
  </sink>

  <sink>
    <name>samp_rate</name>
    <type>message</type>
    <optional>1</optional>
  </sink> 
  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>float</type>
    <vlen>$fft_len</vlen>
  </source>
</block>
